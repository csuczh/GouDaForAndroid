<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dg.app.ui.TestActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_gray"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/fl_content"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divider_gray" />
        <!-- 底部选项卡-->
        <RadioGroup
            android:id="@+id/rg_tab"
            android:layout_width="fill_parent"
            android:layout_height="58dp"
            android:layout_gravity="bottom"
            android:background="#fafafa"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/gouda"
                style="@style/RadioButtonBottomTab"
                android:drawableTop="@drawable/tab_icon_gouda"
                android:text="狗搭" />

            <RadioButton
                android:id="@+id/gouquan"
                style="@style/RadioButtonBottomTab"
                android:checked="true"
                android:drawableTop="@drawable/tab_icon_gouquan"
                android:text="狗圈" />

            <RadioButton
                android:id="@+id/gouzhi"
                style="@style/RadioButtonBottomTab"
                android:drawableTop="@drawable/tab_icon_gouzhi"
                android:text="狗知" />

            <RadioButton
                android:drawableTop="@drawable/tab_icon_me"
                android:id="@+id/wode"
                style="@style/RadioButtonBottomTab"
                android:text="我的" />
        </RadioGroup>
    </LinearLayout>

</RelativeLayout>
