                android:background="@drawable/corner_view_gray"
                android:layout_marginRight="@dimen/space_1"
                android:layout_marginTop="@dimen/space_1"
                android:layout_marginBottom="@dimen/space_1"
                android:clickable="true"/>
            <TextView
                android:id="@+id/text_female"
                android:tag="@string/people_female_tag"
                android:layout_width="@dimen/space_60"
                android:layout_height="@dimen/space_50"
                android:layout_toLeftOf="@+id/text_what"
                android:textSize="@dimen/text_size_16"
                android:textColor="@color/text"
                android:gravity="center"
                android:background="@drawable/corner_view_gray"
                android:layout_marginRight="@dimen/space_2"
                android:text="@string/female"
                android:layout_marginTop="@dimen/space_1"
                android:layout_marginBottom="@dimen/space_1"
                android:clickable="true"/>
            <TextView
                android:id="@+id/text_what"
                android:tag="@string/people_whatever_tag"
                android:layout_width="@dimen/space_60"
                android:layout_height="@dimen/space_50"
                android:layout_alignParentRight="true"
