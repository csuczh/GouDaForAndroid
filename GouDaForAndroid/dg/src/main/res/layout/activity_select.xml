                android:layout_marginTop="@dimen/space_1"
                />
            <TextView
                android:id="@+id/age_max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/age_forward"
