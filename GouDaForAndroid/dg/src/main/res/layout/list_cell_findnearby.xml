<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/layout_item_edit"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="100dp"
    android:layout_marginLeft="@dimen/left_margin"
    android:layout_marginRight="@dimen/right_margin"
    android:background="@color/white"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/left_margin"
        android:layout_marginRight="10dp">

    <RelativeLayout
        android:layout_width="@dimen/space_80"
        android:layout_height="@dimen/space_80"
       >

        <org.kymjs.kjframe.widget.RoundImageView
            android:id="@+id/owner_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="gouzhi"
            android:focusable="false"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"/>

        <ImageView
            android:id="@+id/owner_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@mipmap/userinfo_icon_female"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="3dp"
          />
    </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:layout_marginRight="@dimen/right_margin"

        android:orientation="vertical">

        <!--昵称和距离日期等等-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/owner_nickname"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:alpha="0.87"
                android:gravity="center_vertical"
                android:lines="1"
                android:maxLength="8"
                android:textColor="@android:color/black"
                android:textSize="@dimen/textview_size_14"
                android:text="猪八戒"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true">
                <TextView
                    android:id="@+id/owner_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:textSize="@dimen/textview_size_10"
                    android:text="0.21km"/>
                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="10dp"
                    android:layout_marginLeft="@dimen/space_5"
                    android:layout_marginRight="@dimen/space_5"
                    android:layout_gravity="center_vertical"
                    android:background="@color/gray"/>
                <TextView
                    android:id="@+id/owner_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="huanying"
                    android:textSize="@dimen/textview_size_10" />
            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/owner_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textview_size_10" />
                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="10dp"
                    android:layout_marginLeft="@dimen/space_5"
                    android:layout_marginRight="@dimen/space_5"
                    android:layout_gravity="center_vertical"
                    android:background="@color/gray"/>
                <TextView
                    android:id="@+id/owner_people_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textview_size_10" />
                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="10dp"
                    android:layout_marginLeft="@dimen/space_5"
                    android:layout_marginRight="@dimen/space_5"
                    android:layout_gravity="center_vertical"
                    android:background="@color/gray"/>
                <TextView
                    android:id="@+id/owner_actor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textview_size_10" />
            </LinearLayout>

            <TextView
                android:id="@+id/owner_state"
                android:layout_width="@dimen/space_70"
                android:layout_height="match_parent"
                android:textSize="@dimen/textview_size_14"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:background="@drawable/corner_view_yellow" />
        </RelativeLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/graywhite"/>
    </LinearLayout>
</LinearLayout>


