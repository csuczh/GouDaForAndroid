<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.dg.app.ui.SendJYInvite">
    <!--顶部的编辑框-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="2"
        android:layout_marginRight="@dimen/right_margin"
        android:layout_marginLeft="@dimen/left_margin"

        >

        <EditText
            android:id="@+id/send_jy_edittext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/jiyang"
            android:gravity="left"
            android:textColor="@color/edittext"
            android:textSize="@dimen/textview_size_14"
            android:maxLength="50"
            android:background="@null"/>
        <TextView
            android:id="@+id/tweet_text_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/word_count_round_corner"
            android:textSize="@dimen/text_size_16"
            android:text="50x"
            android:textColor="#C9C9CE" />
        
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/line_44"
            android:layout_width="match_parent"
            android:layout_height="15dip"
            android:background="@color/sparteline"/>
    <!--发起邀请的开始日期-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_60"
        android:layout_marginLeft="@dimen/left_margin"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_alignParentLeft="true"
            android:textColor="@color/textview"
            android:textSize="@dimen/textview_size_16"
            android:text="@string/jiyangStart"
            android:layout_centerVertical="true"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/ji_start_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                />
            <ImageView
                android:id="@+id/ji_start_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@mipmap/ic_enter"/>

        </LinearLayout>

    </RelativeLayout>

        <ImageView

            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/sparteline"/>
    <!--发起邀请的终止日期-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_60"
        android:layout_marginLeft="@dimen/left_margin"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textColor="@color/textview"
            android:textSize="@dimen/textview_size_16"
            android:text="@string/jiyangEnd"
            android:layout_centerVertical="true"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/ji_end_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                />
            <ImageView
                android:id="@+id/ji_end_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@mipmap/ic_enter"/>

        </LinearLayout>
    </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/sparteline"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_60"
            android:layout_marginLeft="@dimen/left_margin"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_alignParentLeft="true"
                android:textColor="@color/textview"
                android:textSize="@dimen/textview_size_16"
                android:text="@string/send_jy_address"
                android:layout_centerVertical="true"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/ld_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    />
                <ImageView
                    android:id="@+id/ld_address_imageview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@mipmap/ic_enter"/>
            </LinearLayout>
        </RelativeLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/sparteline"/>
    </LinearLayout>




</LinearLayout>
