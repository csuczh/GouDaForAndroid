<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/layout_item_edit"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dip"
    android:background="@color/graywhite"
    android:orientation="horizontal">

   <RelativeLayout
       android:layout_width="80dp"
       android:layout_height="80dp"
       android:layout_marginRight="10dp">

       <org.kymjs.kjframe.widget.RoundImageView
           android:id="@+id/img_item_edit"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:contentDescription="gouzhi"
           android:focusable="false"
           android:padding="1dp"
           android:scaleType="centerCrop"
           android:src="@mipmap/ic_launcher"
           android:layout_alignParentTop="true"
           android:layout_alignParentLeft="true"
           android:layout_alignParentStart="true" />
       <ImageView
           android:id="@+id/chat_gender"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentRight="true"
           android:layout_alignParentBottom="true"
           android:background="@mipmap/userinfo_icon_female"
            />
    <!--<ImageView-->
        <!--android:id="@+id/img_item_edit"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:alpha="0.54"/>-->

   </RelativeLayout>
   <LinearLayout
      android:layout_width="0dip"
      android:layout_height="match_parent"
      android:layout_weight="5"
       android:minHeight="48dp"
      android:orientation="vertical">

      <!--昵称和距离日期等等-->
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="0dip"
          android:layout_weight="1"
          >
    <TextView
        android:id="@+id/txt_item_edit"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:alpha="0.87"
        android:gravity="center_vertical"
        android:lines="1"
        android:maxLength="8"
        android:textColor="@android:color/black"
        android:textSize="@dimen/textview_size_14"
        android:text="猪八戒"/>
          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:layout_alignParentRight="true"
              android:layout_marginRight="2dp">
              <TextView
                  android:id="@+id/chat_distance"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center_vertical"
                  android:gravity="center"
                  android:textColor="@color/room_text"
                  android:textSize="@dimen/textview_size_8"
                  android:text="0.21km"/>
              <TextView
                  android:layout_width="3dp"
                  android:layout_height="@dimen/space_16"
                  android:layout_gravity="center_vertical"
                  android:gravity="center"
                  android:text="|"
                  android:textColor="@color/room_text"
                  android:layout_marginRight="2dp"
                  android:layout_marginLeft="2dp"
                  android:textSize="@dimen/space_8"/>
              <TextView
                  android:id="@+id/chat_date"
                  android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:layout_gravity="center_vertical"
                  android:textSize="@dimen/textview_size_8"
                  android:gravity="center"
                  android:textColor="@color/room_text"
                  android:text="huanying"/>
          </LinearLayout>


      </RelativeLayout>

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="0dip"
          android:layout_weight="1"
         >
          <TextView
              android:id="@+id/chat_cotent"
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:layout_alignParentLeft="true"
              android:textSize="@dimen/textview_size_8"
              android:textColor="@color/room_text"
              android:gravity="center"
              android:layout_centerVertical="true"
              android:text="来大家来遛狗"/>
          <TextView
              android:id="@+id/chat_show"
              android:layout_width="@dimen/space_80"
              android:layout_height="@dimen/space_50"
              android:layout_alignParentRight="true"
              android:layout_marginRight="2dp"
              android:textSize="@dimen/textview_size_14"
              android:gravity="center"
              android:text="同意"
              android:textColor="@color/white"
              android:background="@drawable/chat_invite_red_button"
              android:layout_centerVertical="true"/>
      </RelativeLayout>
       <ImageView
           android:layout_width="match_parent"
           android:layout_height="1dip"
           android:layout_marginTop="2dip"
           android:background="@color/btn_white_pressed"/>
      </LinearLayout>
</LinearLayout>