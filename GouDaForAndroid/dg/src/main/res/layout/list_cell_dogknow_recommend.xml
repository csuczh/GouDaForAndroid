<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1">
    <!--狗知listview item信息-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/corner_view_gouzhi_recommend"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="vertical">
    <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginLeft="@dimen/left_margin"
         android:layout_marginRight="@dimen/right_margin">
    <TextView
        android:id="@+id/hot_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dddfdfd"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical"
        android:layout_alignParentBottom="true" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true">
        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/select_line"/>
        <ImageView
            android:id="@+id/recommend_forward"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@mipmap/ic_enter"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/space_3"
        />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_alignParentBottom="true"
        android:background="@color/select_line"
        android:id="@+id/imageView2" />
</RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_80"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/left_margin"
        android:layout_marginRight="@dimen/right_margin">
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="match_parent"
           android:orientation="vertical"
           android:gravity="top"
           android:layout_gravity="left">
           <org.kymjs.kjframe.widget.RoundImageView
               android:id="@+id/hot_pictrue"
               android:layout_width="@dimen/space_50"
               android:layout_height="@dimen/space_50"
               android:contentDescription="gouzhi"
               android:focusable="false"
               android:padding="1dp"
               android:scaleType="centerCrop"
               android:layout_gravity="left"
               android:src="@mipmap/ic_launcher"/>
           <TextView
               android:id="@+id/hot_comment_count"
               android:layout_width="@dimen/space_50"
               android:layout_height="@dimen/space_20"
               android:layout_gravity="left"
               android:gravity="center"
               android:background="@drawable/corner_view_blue"
               android:text="0赞"/>
       </LinearLayout>
        <TextView
            android:id="@+id/question_content"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:layout_marginLeft="@dimen/space_5"
            android:layout_gravity="center_vertical"
            android:text="dfdfdfdddddddddddd">
        </TextView>
    </LinearLayout>
    </LinearLayout>
    <!--<ImageView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dip"-->
        <!--android:background="@color/select_line"-->
        <!--android:layout_marginLeft="@dimen/left_margin"-->
        <!--android:layout_marginRight="@dimen/right_margin"/>-->
</LinearLayout>