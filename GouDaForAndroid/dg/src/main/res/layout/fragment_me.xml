<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1b55661f"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:background="#FFF2A4">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的"
            android:textSize="16sp"
            android:textColor="#BEA076"
            />
    </LinearLayout>

    <!-- 我的信息  显示行 -->
    <LinearLayout
        android:id="@+id/mine_info_all_layout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center_vertical"
        android:background="@drawable/bg_white2gray_sel"
        android:layout_marginTop="10dp">

        <!-- 我的头像 -->
        <org.kymjs.kjframe.widget.RoundImageView
            android:id="@+id/mine_info_img_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:src="@mipmap/ic_dg" />

        <!-- 我的信息展示-->
        <LinearLayout
            android:id="@+id/mine_info_layout"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/bg_white2gray_sel"
            android:orientation="vertical">

            <!-- 昵称+称号  -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/mine_info_username_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="#ff000000"
                    android:text="" />

                <TextView
                    android:id="@+id/mine_info_nickname_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/label_user_bg"
                    android:text=""
                    />

            </LinearLayout>

            <!-- 年龄+性别+职业 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:padding="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/mine_info_age_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text=""/>
                <TextView
                    android:id="@+id/mine_info_gender_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textSize="15sp"
                    android:text=""/>
                <TextView
                    android:id="@+id/mine_info_job_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textSize="15dp"
                    android:text=""/>

            </LinearLayout>



        </LinearLayout>

        <!-- 右箭头 -->
        <ImageView
            android:id="@+id/mine_info_detail_iv"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@mipmap/ic_enter"/>

    </LinearLayout>

    <!-- 萌耀榜 -->
    <LinearLayout
        android:id="@+id/ll_setting_rongyaobang"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_white2gray_sel"
        android:gravity="center"
        android:orientation="horizontal">

        <!-- 图标  -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23dp"
            android:layout_marginStart="23dp"
            android:src="@mipmap/ic_mengyaobang"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:textColor="@android:color/black"
            android:text="萌耀榜"/>

        <!-- 右箭头 -->
        <ImageView
            android:id="@+id/mine_rate_detail_iv"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:src="@mipmap/ic_enter"/>

    </LinearLayout>

    <!--分割线-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_gray" />

    <!-- 我的邀请 -->
    <LinearLayout
        android:id="@+id/ll_setting_invitation"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:background="@drawable/bg_white2gray_sel"
        android:orientation="horizontal">

        <!-- 图标 -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23dp"
            android:layout_marginStart="23dp"
            android:src="@mipmap/wodeyaoqing"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:textColor="@android:color/black"
            android:text="我的邀请"/>

        <!-- 右箭头 -->
        <ImageView
            android:id="@+id/mine_invitation_detail_iv"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:src="@mipmap/ic_enter"/>

    </LinearLayout>

    <!--分割线-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_gray" />

    <!-- 收藏  -->
    <LinearLayout
        android:id="@+id/ll_setting_collection"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:background="@drawable/bg_white2gray_sel"
        android:orientation="horizontal">
        <!-- 图标 -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23dp"
            android:layout_marginStart="23dp"
            android:src="@mipmap/shoucang"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:textColor="@android:color/black"
            android:text="收藏"/>

        <!-- 右箭头 -->
        <ImageView
            android:id="@+id/mine_collect_detail_iv"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:src="@mipmap/ic_enter"/>

    </LinearLayout>

    <!--分割线-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_gray" />

    <!-- 分享狗搭 -->
    <LinearLayout
        android:id="@+id/ll_setting_sharegouda"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:background="@drawable/bg_white2gray_sel"
        android:orientation="horizontal">
        <!-- 图标 -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23dp"
            android:layout_marginStart="23dp"
            android:src="@mipmap/fenxianggouda"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:textColor="@android:color/black"
            android:text="分享狗搭"/>

        <!-- 右箭头 -->
        <ImageView
            android:id="@+id/mine_share_detail_iv"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:src="@mipmap/ic_enter"/>

    </LinearLayout>


    <!-- 设置 -->
    <LinearLayout
        android:id="@+id/ll_setting_set"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:background="@drawable/bg_white2gray_sel"
        android:orientation="horizontal">

        <!-- 图标 -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23dp"
            android:layout_marginStart="23dp"
            android:src="@mipmap/shezhi"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:textColor="@android:color/black"
            android:text="设置"/>

        <!-- 右箭头 -->
        <ImageView
            android:id="@+id/mine_setting_detail_iv"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:src="@mipmap/ic_enter"/>

    </LinearLayout>


</LinearLayout>
